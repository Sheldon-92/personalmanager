#!/usr/bin/env bash
set -euo pipefail

# Project-local PersonalManager launcher
# Prefer poetry if available; fallback to module via PYTHONPATH=src

if command -v poetry >/dev/null 2>&1; then
  exec poetry run pm "$@"
else
  export PYTHONPATH="${PYTHONPATH:-}:$(cd "$(dirname "$0")/.." && pwd)/src"
  exec python3 -m pm.cli.main "$@"
fi

